@model DataTable
@using System.Data

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ProductInsertMessage"] != null){

	<div class="alert alert-success">
		@TempData["ProductInsertMessage"]
	</div>
}

<h2>Product List</h2>
<a asp-controller="Product" asp-action="Add_Edit_Product" class="btn btn-primary">Add Product</a>
<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Code</th>
            <th>Description</th>
            <th>User ID</th>
            <th>User Name</th>
            <th>Is Active</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody> 
        @foreach(DataRow row in Model.Rows)
        {
            <tr>
				<td>@row["ProductID"]</td>
				<td>@row["ProductName"]</td>
				<td>@row["ProductPrice"]</td>
				<td>@row["ProductCode"]</td>
				<td>@row["Description"]</td>
                <td>@row["UserID"]</td>
				<td>@row["UserName"]</td>
                <td>@row["IsActive"]</td>
                <td>
                    <a asp-controller="Product" asp-action="Add_Edit_Product" asp-route-ProductID="@row["ProductID"]" class="btn btn-outline-primary btn-sm ">Edit</a>
                    <a asp-action="ProductDelete" asp-route-ProductID="@row["ProductID"]" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
			</tr>
        }

    </tbody>
</table>